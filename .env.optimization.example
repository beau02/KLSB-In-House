# Performance Optimization Configuration
# Add these to your .env file in the backend directory

# ============================================
# Redis Cache Configuration (Optional)
# ============================================
# Enable or disable Redis caching
# Default: true (if Redis is available)
ENABLE_REDIS=true

# Redis server host
REDIS_HOST=localhost

# Redis server port
REDIS_PORT=6379

# Redis database number (0-15)
REDIS_DB=0

# Redis password (if required)
# REDIS_PASSWORD=your_secure_password

# ============================================
# Cache TTL Settings (in seconds)
# ============================================
# Default cache duration for API responses
DEFAULT_CACHE_TTL=300

# Cache duration for user data (frequently changes)
USER_CACHE_TTL=300

# Cache duration for project data (rarely changes)
PROJECT_CACHE_TTL=600

# Cache duration for report/stats data
REPORTS_CACHE_TTL=900

# ============================================
# Performance Monitoring
# ============================================
# Enable performance logging
LOG_CACHE_HITS=true

# Enable slow query logging (queries taking > X ms)
SLOW_QUERY_THRESHOLD=1000

# ============================================
# Compression Settings
# ============================================
# Enable gzip compression for responses
ENABLE_COMPRESSION=true

# Minimum response size to compress (bytes)
COMPRESSION_THRESHOLD=1024

# ============================================
# Frontend Cache Settings
# ============================================
# These are typically set in frontend environment files
# but documented here for reference

# Frontend API base URL
VITE_API_URL=/api

# Cache enabled in frontend
VITE_CACHE_ENABLED=true

# Default frontend cache TTL (seconds)
VITE_CACHE_TTL=300
